{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["eventId", "eventType", "occurredAt", "recipient", "templateKey", "data"],
  "properties": {
    "eventId": {
      "type": "string",
      "description": "Unique identifier for the event"
    },
    "eventType": {
      "type": "string",
      "description": "Type of event",
      "examples": ["orders.created", "orders.paid", "delivery.assigned"]
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the event occurred"
    },
    "correlationId": {
      "type": "string",
      "description": "Optional correlation ID for tracing"
    },
    "traceId": {
      "type": "string",
      "description": "Optional trace ID for distributed tracing"
    },
    "recipient": {
      "type": "object",
      "properties": {
        "userId": {
          "type": ["string", "null"],
          "description": "User ID of the recipient"
        },
        "email": {
          "type": ["string", "null"],
          "format": "email",
          "description": "Email address of the recipient"
        },
        "phone": {
          "type": ["string", "null"],
          "description": "Phone number of the recipient"
        },
        "deviceToken": {
          "type": ["string", "null"],
          "description": "FCM device token for push notifications"
        },
        "role": {
          "type": ["string", "null"],
          "enum": ["customer", "restaurant", "deliverer", "admin", null],
          "description": "Role of the recipient"
        }
      },
      "additionalProperties": false
    },
    "templateKey": {
      "type": "string",
      "description": "Key for the notification template to use"
    },
    "data": {
      "type": "object",
      "description": "Template variables and metadata",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
